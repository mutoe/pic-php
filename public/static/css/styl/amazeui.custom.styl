
// panel 圆角化
panel-radius = 4px
.am-panel
    border-radius panel-radius
    .am-panel-hd
        border-radius panel-radius panel-radius 0 0
    .am-panel-footer
        border-radius 0 0 panel-radius panel-radius

// 调整 fixed 宽度限制
@media screen and (min-width 1740px)
    .am-g-fixed
        max-width 1600px

@media screen and (min-width 840px) and (max-width 1000px)
    .am-g-fixed
        max-width 820px
