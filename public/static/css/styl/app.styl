
// 头像大小
avatar-small-size = 60px

#detail-content
    width 100%
    padding 0 84px
    hr
        border-color #ddd

    a.picturebox
        display block
        position relative
        .picture
            position absolute
            width 100%
            height 100%
            background transparent no-repeat center
            background-size contain
            z-index 2010
            &.picture_thumb
                z-index 2000

    .other
        display flex
        flex-direction column
        justify-content center
        align-items flex-start
        width 100%
        height 100%
        .detail
            font-size 1.4rem
            margin-bottom 8px
            min-height 128px
            min-width 1px

        .author
            font-size 1rem
            color #5D5D5D
            display block
            padding 0.4rem 0px 0px
            margin-bottom 16px

        .tags
            ul
                line-height 1
                position relative
                margin 0
                padding 0
                list-style outside none none
                li
                    font-size 1.2rem
                    position relative
                    display inline-block
                    margin 0 1em 0 0
                    padding .15em 0
                    white-space nowrap

    .bottom-part
        margin-top 32px
        max-width 1000px
        margin-left auto
        margin-right auto
        .info-piece
            img.avatar
                width avatar-small-size
                height avatar-small-size

            .property
                color #999

            .detail
                line-height 1.2
                color #444
                background-color #FAFAFA
                padding 15px
                margin-bottom 20px
                word-wrap break-word

            hr
                margin-left -12px
                margin-right -12px
                color #ededed

        .comments
            .comment
                .meta
                    margin 0 0 8px 72px

        #pin_view_add_comment textarea
            width 568px
            height 60px
            min-height 60px
            resize vertical
            margin-bottom 10px
            display block
            line-height 1.5
            padding 5px 10px
            font-size 16px
            color #777
            background #FCFCFC none repeat scroll 0% 0%
            border 1px solid #CCC
            box-shadow 0px 1px 2px rgba(0, 0, 0, 0.05) inset

.popupLayer
    display none
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    background-color rgba(255,255,255,.92)
    z-index 2000
    overflow auto
    *
        color #332

    .btnLayer
        .closeBtn
            position fixed
            cursor pointer
            top 0px
            right 14px
            width 56px
            height 56px
            z-index 2900
            i
                position absolute
                top 50%
                left 50%
                width 36px
                height 36px
                margin -18px 0 0 -18px
                background url(../i/btn_close_layer.png) no-repeat scroll

    .contentLayer
        @extend #detail-content

    .prevBtn,.nextBtn
        position fixed
        top 40%
        bottom 0
        width 84px
        height 150px
        z-index 2800
        background url(../i/pin_view_arrows.png) no-repeat scroll
        cursor pointer

    .prevBtn
        left 0
        background-position 10px 0
        &:hover
            background-position 10px -165px

    .nextBtn
        right 14px
        background-position -72px 0
        &:hover
            background-position -72px -165px
