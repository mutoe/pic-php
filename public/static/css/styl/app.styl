
// 头像大小
avatar-small-size = 60px

// 详情浅灰色背景
detail-bgcolor = #fafafa

.share-detail
    width 100%
    padding 0 84px
    hr
        border-color #ddd

    a.picturebox
        display block
        position relative
        .picture
            position absolute
            width 100%
            height 100%
            background transparent no-repeat center
            background-size contain
            z-index 2010
            &.picture_thumb
                z-index 2000

    .other
        display flex
        flex-direction column
        justify-content center
        align-items flex-start
        width 100%
        height 100%
        .detail
            font-size 1.4rem
            margin-bottom 8px
            min-height 128px
            min-width 1px

        .author
            font-size 1rem
            color #5D5D5D
            display block
            padding 0.4rem 0px 0px
            margin-bottom 16px

        .tags
            ul
                line-height 1
                position relative
                margin 0
                padding 0
                list-style outside none none
                li
                    font-size 1.2rem
                    position relative
                    display inline-block
                    margin 0 1em 0 0
                    padding .15em 0
                    white-space nowrap

    .bottom-part
        margin-top 32px
        max-width 1000px
        margin-left auto
        margin-right auto
        .info-piece
            img.avatar
                width avatar-small-size
                height avatar-small-size

            .property
                color #999

            .detail
                line-height 1.2
                color #444
                background-color detail-bgcolor
                padding 15px
                word-wrap break-word

            hr
                margin-left -12px
                margin-right -12px
                color #ededed

        .score
            .hint
                font-size 1.6rem
                font-family 'Georgia', '微软雅黑'

        .user-share
            .thumb
                display block
                width 100%
                height 100px
                background transparent center no-repeat
                background-size cover

// 评论组件
.comment-widget

    .comments

        .comment
            display flex
            margin 0 -1.25rem
            padding 1.6rem 1.25rem
            border-bottom 1px solid #ededed
            &:last-child
                border-bottom 0

            .comment-head
                .action-buttons
                    .btn
                        margin-top -6px
                        cursor pointer
                        visibility hidden
                        &.delete
                            color #bbb

            &:hover
                .btn
                    visibility visible !important

            .comment-body
                margin-top 4px
                .detail
                    margin-bottom 0
                    padding .82rem
                    line-height 1.6em
                    color #555

        .no-comment
            display flex
            align-content center
            align-items center
            justify-content center
            height 1.6 * avatar-small-size
            color #bbb

    .comment-edit
        display flex
        flex-flow row nowrap

    .avatar
        flex-shrink 0
        display block
        height avatar-small-size
        width avatar-small-size
        background #eee center no-repeat
        background-size cover

    .comment-right
        width 100%
        margin-left 1.25rem

        textarea
            display block
            width 100%
            height avatar-small-size
            min-height avatar-small-size
            max-height 4 * avatar-small-size
            background #eee
            margin-bottom .4rem
            padding 5px 10px
            border 0
            box-shadow 0px 1px 2px rgba(0, 0, 0, 0.05) inset
            resize vertical
            line-height 1.5
            color #777

.user-index

    #banner
        margin -16px 0 16px
        height 200px
        background transparent url(../i/user_banner.png) no-repeat center
        background-size cover

    .panel-tags
        .am-panel-bd
            line-height 2.4em

.panel-shares
    .s-box
        margin-bottom 12px
        .image
            position relative
            display block
            height 160px
            width 100%
            background transparent no-repeat center 20%
            background-size cover
            margin-bottom 4px

            .detail
                position absolute
                bottom 0
                left 0
                right 0
                background-color #0008
                font-size 12px
                color #ddd
                margin 0
                padding 2px 4px

.tag-read
    #banner
        margin -16px 0 16px
        height 200px
        background transparent url(../i/user_banner.png) no-repeat center
        background-size cover

.tag-read
    .tag-group
        > a
            margin-bottom 4px

    .detail
        background-color detail-bgcolor
        padding 15px

.tags-widget
    &>span
        margin 4px 2px
        &:hover
            .remove-tag
                color #fff
                border-left 2px solid #fff4
                padding-left 4px

    .add-tag
        display inline-block
        .tips
            display none
        input
            border 0
            border-bottom 1px solid #ddd
            width calc(3em + 2px)
            padding 1px 3px
            font-size .9em
            transition .5s all ease-in-out
            &:focus
                width 10em
                & + .tips
                    display inline-block

    .read-tag
        color #fff

    .remove-tag
        cursor pointer
        color #fff4
        padding-left 6px

.popupLayer
    display none
    position fixed
    height 100%
    top 0
    left 0
    right 0
    background-color rgba(255,255,255,.92)
    z-index 2000
    overflow auto
    transition 0.3s all ease-in-out

    .btnLayer
        .closeBtn
            position fixed
            cursor pointer
            top 0px
            right 14px
            width 56px
            height 56px
            z-index 2900
            i
                position absolute
                top 50%
                left 50%
                width 36px
                height 36px
                margin -18px 0 0 -18px
                background url(../i/btn_close_layer.png) no-repeat scroll

    .prevBtn,.nextBtn
        position fixed
        top 40%
        bottom 0
        width 84px
        height 150px
        z-index 2800
        background url(../i/pin_view_arrows.png) no-repeat scroll
        cursor pointer

    .prevBtn
        left 0
        background-position 10px 0
        &:hover
            background-position 10px -165px

    .nextBtn
        right 14px
        background-position -72px 0
        &:hover
            background-position -72px -165px

.pager
    margin-top 4rem

.am-sticky-placeholder
    float left
    width 100%

.floor
    margin-top 4rem
    margin-bottom 6rem
.photos
    font-size 0px
    min-height 400px

// 收藏动画
.heart-container
    clear both
    margin-bottom 20px
    height 150px
    p
        font-family "Microsoft YaHei", 'Georgia', Times, Times New Roman, serif
        font-size 25px

.heart
    width 80px
    height 80px
    background url(../i/web_heart_animation.png) no-repeat left center
    background-size cover
    cursor pointer

    &:hover,
    &:focus
        background-position: right

@keyframes heartBlast
    0%
        background-position: left
    100%
        background-position: right

.heartAnimation
    display inline-block
    background-position right
    animation heartBlast .8s steps(28)

