
// 自定义 amazeui 组件
@import "amazeui.custom"

// base
*
    font-family "微软雅黑","microsoft yahei"

body
    font-size 15px
    width 100%
    height 100%
    background #000 url(../i/bgnoise.gif) repeat

// 移除 input[type="number"] 的小箭头
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button{
    -webkit-appearance: none !important;
    margin: 0;
}
input[type="number"]{-moz-appearance:textfield;}

// 本站导航栏
nav-height = 30px

.nav
    z-index 60
    height nav-height
    min-height nav-height
    padding-left 32px
    padding-right 32px
    .am-topbar-nav > li
        a, span
            line-height nav-height - 1
            font-size 12px
            &::after
                display none

        span
            margin 0 12px
            color #fff

        &.am-active > a
            color #fff

        & > a
            color #333
            &:hover
                color #fff
                background-color rgba(0,0,0,.4)

    .am-topbar-right
        .add-share
            margin-left 12px
        li
            margin-left 0

    .am-topbar-form
    .am-topbar-btn
        margin-top 0
        height 30px

    &.am-sticky
        background #F8F8F8 !important
        border-width 0 0 1px !important
        .am-topbar-nav > li
            & > a
                color #333 !important
                &:hover
                    background-color rgba(0,0,0,.1)

            &.am-active > a
                color #0E90D2

.topic-block
    width 100%
    height 170px
    margin-bottom 32px
    position relative
    overflow hidden
    a.logo
        display block
        width 220px
        height 105px
        background transparent none no-repeat scroll left center
        background-size contain
        z-index 100
        margin 16px 0

    .nav
        background rgba(0,0,0,.33)
        border-width 0
        border-color rgba(0,0,0,.33)
        transition all 0.2s ease
        margin-top 0 - nav-height
        .am-topbar-nav > li > a
            color #fff

.topic-background
    position absolute
    top 0
    left 0
    background-position center top !important
    width 100%
    height 180px
    margin -10px 0

.topic-block-blur-wrap
    position relative
    height 30px
    width 100%
    overflow hidden
    z-index 50

.topic-block-blur
    position absolute
    top -10px
    width 100%
    height 50px
    background-position center top !important
    filter blur(5px)

// 通用页脚
.footer
    background-color #1B1C1D
    color #CCE2FF
    padding 36px 16px
    margin-top 48px
    line-height 28px
    width 100%
    bottom 0px
    transition all 0.2s ease 0s
    p
    a
        font-size 13px

    .container
        max-width 1140px
        margin 10px auto
        .slogan
            text-align center
            font-weight 200
            letter-spacing 2px
            margin-top 24px
            margin-bottom 48px

    hr
        margin-top 20px
        margin-bottom 20px
        border-width 1px 0px 0px
        border-style solid none none
        border-color #E5E5E5 -moz-use-text-color -moz-use-text-color
        -moz-border-top-colors none
        -moz-border-right-colors none
        -moz-border-bottom-colors none
        -moz-border-left-colors none

    .copyright
        margin-top 16px
        padding-left 4em

    .subscrib_us
        padding-left 4em
        line-height 1.53846
        margin-top 16px

    .qrcode
        text-align center
        img
            height 100px

title-bar-height = 64px

.title-bar
    height title-bar-height + 32
    margin-bottom 12px
    .title
        padding-top 16px
        font-weight 375
    .cate-info
        font-size 12px
    .title-bg
        position absolute
        left 0
        right 0
        width 100%
        height title-bar-height + 32
        background-color #fff
        z-index -1
        box-shadow 0 2px 4px #555

.card
    box-shadow: 3px 3px 6px #888888;
    background-color: #fff;
    padding: 2rem;

// 验证码
#captcha-img
    cursor: pointer;
